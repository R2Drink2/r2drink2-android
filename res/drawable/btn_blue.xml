<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#348ddf" />
            <stroke android:width="1dp" android:color="#1f5689" />
            <corners android:radius="10dp" />
            <padding android:top="5dp" android:bottom="5dp" android:left="40dp" android:right="40dp"/>
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:startColor="#348ddf" android:endColor="#1f5689" />
            <stroke android:width="1dp" android:color="#2f6699" />
            <corners android:radius="10dp" />
            <padding android:top="5dp" android:bottom="5dp" android:left="40dp" android:right="40dp"/>
        </shape></item>

</selector>